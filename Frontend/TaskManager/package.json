{
  "name": "@prismq/frontend-taskmanager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Mobile-first UI for Backend/TaskManager - Vue 3 + TypeScript + Tailwind CSS",
  "author": "PrismQ Team",
  "license": "PROPRIETARY",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:analyze": "ANALYZE=true npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:ux": "playwright test --config=playwright.ux-testing.config.ts",
    "test:ux:report": "playwright show-report _meta/tests/e2e-results",
    "test:ux:mobile": "playwright test --config=playwright.ux-testing.config.ts --project=redmi-chrome",
    "test:ux:accessibility": "playwright test --config=playwright.ux-testing.config.ts --project=accessibility",
    "test:ux:performance": "playwright test --config=playwright.ux-testing.config.ts _meta/tests/e2e/performance",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "bundle:size": "node scripts/bundle-size.js",
    "bundle:check": "npm run build && npm run bundle:size",
    "baseline:capture": "node scripts/baseline.js capture",
    "baseline:compare": "node scripts/baseline.js compare",
    "baseline:report": "node scripts/baseline.js report",
    "lighthouse": "npm run build && npm run preview & lhci autorun --config=lighthouserc.cjs",
    "lighthouse:ci": "lhci autorun --config=lighthouserc.cjs",
    "perf:test": "npm run bundle:check && npm run lighthouse"
  },
  "dependencies": {
    "@sentry/vue": "^8.38.0",
    "axios": "^1.6.0",
    "dompurify": "^3.3.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@sentry/vite-plugin": "^2.22.7",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^7.1.2",
    "eslint": "^8.55.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.0",
    "prettier": "^3.1.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
