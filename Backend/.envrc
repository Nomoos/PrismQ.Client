# Auto-activate virtual environment when entering this directory
# Requires direnv: https://direnv.net/
# Run 'direnv allow' once to enable

# Activate the local venv
if [ -f "venv/bin/activate" ]; then
    source venv/bin/activate
elif [ -f "venv/Scripts/activate" ]; then
    # Windows Git Bash
    source venv/Scripts/activate
else
    echo "⚠️  Virtual environment not found. Run: ../../_meta/_scripts/setup_all_envs.sh"
    return 1
fi

# Load project environment variables from .env if it exists
if [ -f ".env" ]; then
    dotenv
fi

# Set project-specific environment variables
export PROJECT_NAME="Client_Backend"
export PYTHONPATH="$(pwd):$PYTHONPATH"

# Inform user
echo "✅ Activated Client/Backend environment"
